---
import { CenterTitle, SkillGrid } from "./UI";
import {
    FrontendStack,
    BackendStack,
    ToolsStack,
} from "../utils/SkillStack";
---

<section id="skills" class="w-full min-h-screen px-6 py-4 pt-14 bg-background">
    <CenterTitle title="Tech Stack" color="primary" />

    <div class="Fade_Up flex_center flex-col gap-4 py-4 xs:p-4 max-w-4xl mx-auto">
        <SkillGrid stack={[...FrontendStack, ...BackendStack, ...ToolsStack]} />
    </div>
</section>
